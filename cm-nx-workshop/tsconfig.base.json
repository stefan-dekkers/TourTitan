{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cm-nx-workshop/backend/dto": ["libs/backend/dto/src/index.ts"],
      "@cm-nx-workshop/backend/features": [
        "libs/backend/features/src/index.ts"
      ],
      "@cm-nx-workshop/shared/api": ["libs/shared/api/src/index.ts"],
      "@cm-nx-workshop/tourtitan/common": [
        "libs/tourtitan/common/src/index.ts"
      ],
      "@cm-nx-workshop/tourtitan/features": [
        "libs/tourtitan/features/src/index.ts"
      ],
      "@cm-nx-workshop/ui": ["libs/tourtitan/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
